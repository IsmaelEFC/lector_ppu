{
  "name": "Detector de Patentes Chile",
  "short_name": "PatentesChile",
  "description": "Aplicación PWA para detectar placas patentes chilenas usando la cámara del móvil con OCR avanzado",
  "start_url": "./",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "scope": "./",
  "lang": "es-CL",
  "dir": "ltr",
  "categories": ["utilities", "productivity", "photo"],
  "prefer_related_applications": false,
  "icons": [

    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },

    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Escanear Patente",
      "short_name": "Escanear",
      "description": "Iniciar escaneo rápido de placa patente",
      "url": "./?action=scan",
      "icons": [
        {
          "src": "icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Ver Historial",
      "short_name": "Historial", 
      "description": "Ver historial de detecciones",
      "url": "./?action=history",
      "icons": [
        {
          "src": "icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/mobile-1.png",
      "sizes": "320x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Pantalla principal de detección"
    },
    {
      "src": "screenshots/desktop-1.png", 
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Vista de escritorio"
    }
  ],
  "related_applications": [
    {
      "platform": "web",
      "url": "https://www.autoseguro.gob.cl/"
    }
  ],
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+platedetector",
      "url": "./?plate=%s"
    }
  ]
}